<!-- Provider Details Section -->
<section class="page-section" id="books-details">
  <div class="container">
    <h2 class="text-center mt-0">{{book.Name}}</h2>
    <hr class="divider my-4">

    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead class="thead-light">
          <tr>
            <th scope="col">Id</th>
            <th scope="col">ISBN</th>
            <th scope="col">Author</th>
            <th scope="col">Amount of pages</th>
            <th scope="col">Edition</th>
            <th scope="col">Publishing house</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">{{book.ID}}</th>
            <td>{{book.ISBN}}</td>
            <td>{{book.Author}}</td>
            <td>{{book.PagesAmount}}</td>
            <td>{{book.Edition}}</td>
            <td>{{book.PublishingHouse}}</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="row my-4">
      <div class="col-sm-6">
        <div class="card" text-center>
          <div class="card-body">
            <h5 class="card-title">Description</h5>
            <p class="card-text">{{book.Description}}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="row my-4">
      <div class="col-sm-12 text-center">
        <a href="/books/borrow/{{id}}" class="btn btn-primary btn-lg ">Borrow this book</a>
      </div>
    </div>
  </div>
</section>