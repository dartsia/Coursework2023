<!-- Add Provider Section -->
<section class="page-section" id="add-book-form">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <h2 class="mt-0">Add a New Book</h2>
        <hr class="divider my-4">
      </div>
    </div>
    <div class="row justify-content-center">
      <!-- Nested Row within Card Body -->
      <div class="row o-hidden border-0">
        <div class="col-lg-12">
          <form action="/books/add-book/" method="post" class="user">
            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">
                <label for="inputISBN">ISBN</label>
                <input type="text" class="form-control form-control-user" name="isbn" id="inputISBN" required>
              </div>
              <div class="col-sm-6">
                <label for="inputAuthor">Author</label>
                <input type="text" class="form-control form-control-user" name="author" id="inputAuthor" required>
              </div>
            </div>
            <div class="form-group">
              <label for="inputName">Name</label>
              <input type="text" class="form-control form-control-user" name="name" id="inputName" required>
            </div>
            <div class="form-group">
              <label for="inputDesc">Description</label>
              <input type="text" class="form-control" name="description" id="inputDesc" required>
            </div>
            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">
                <label for="inputPages">Pages amount</label>
                <input type="number" class="form-control form-control-user" name="pages" id="inputPages" required>
              </div>
              <div class="col-sm-6 mb-3 mb-sm-0">
                <label for="inputEdition">Edition</label>
                <input type="text" class="form-control form-control-user" name="edition" id="inputEdition" required>
              </div>
            </div>
            <hr class="divider my-4">
            <div class="form-group">
              <label for="inputHouse">Publishing house</label>
              <input type="text" class="form-control form-control-user" name="publishing_house" id="inputHouse"
                required>
            </div>
            
            <button class="btn btn-primary btn-lg btn-block" type="submit" href="/books/add-book/">Add Book</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
